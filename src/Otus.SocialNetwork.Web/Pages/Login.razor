@page "/users/login"
@using Otus.SocialNetwork.Web.API
@using System.ComponentModel.DataAnnotations
@using Otus.SocialNetwork.Web.Utils
@implements IDisposable
@inject ISocialNetworkAdapter _api
@inject ILocalStorage _localStorage;

<PageTitle>Вход в систему</PageTitle>

<h1>Введите данные для входа</h1>

<EditForm Model="this">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <InputTextForm Label="Username" @bind-Value="Username"/>
    <InputTextForm Label="Пароль" @bind-Value="Password" type="password"/>
</EditForm>

<button class="btn btn-primary" @onclick="OnButtonClick">Продолжить</button>

<div>@_result</div>

@code {
    private readonly CancellationTokenSource _cts = new();

    [Required]
    private string Username { get; set; } = string.Empty;

    [Required]
    private string Password { get; set; } = string.Empty;
    
    private string _result = string.Empty;

    private async Task OnButtonClick()
    {
        try
        {
            var response = await _api.LoginAsync(Username, Password, _cts.Token);
            await _localStorage.SetItemAsync("jwt", response.Token);
            _result = "Успех!";
        }
        catch (Exception e)
        {
            _result = $"Провал!: {e}";
        }
    }

    public void Dispose()
    {
        _cts.Cancel();
        _cts.Dispose();
    }
}